    // get the budget grid element.
    var budgetgrid = document.getelementbyid("budget-info");

    // get the fa-bar icon elements.
    var fabaricons = document.queryselectorall(".fa-bars");

    // add an event listener to each fa-bar icon to display the category budget when the icon is clicked.
    for (var i = 0; i < fabaricons.length; i++) {
        fabaricons[i].addeventlistener("click", function () {
            // get the categoryid from the href attribute.
            var categoryid = this.getattribute("href");

            // make an ajax request to get the budget for the category.
            $.ajax({
                url: '/category/getbudget/' + categoryid,
                method: 'get',
                success: function (budget) {
                    // get the category name from the category grid.
                    var categoryname = budgetgrid.datasource.find(categoryid, "categoryid").titlewithicon;

                    // update the budget-info element with the budget and category name.
                    document.getelementbyid("budget-info").innerhtml = `
                          <span class="d-flex flex-row justify-content-between">
                            <span>budget:</span>
                            <span>${budget}</span>
                          </span>
                          <span class="d-flex flex-row justify-content-between">
                            <span>category:</span>
                            <span>${categoryname}</span>
                          </span>`;
                },
                error: function () {
                    // handle the error, if any.
                    document.getelementbyid("#budget-info").text('failed to retrieve budget.');
                }
            });
        });
    }

